@model Rebound.Models.ItemCategory

@{
    ViewBag.Title = "Update";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="card border-info">
            <div class="card-header  d-flex justify-content-between flex-wrap">
                <h6 class="m-0 font-weight-bold text-primary mr-5">Create category </h6>
                <a href="@Url.Action("Index","Categories")" class="btn btn-primary"><i class="fas fa-list"></i> Categories</a>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group d-sm-flex">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="card-footer border-info bg-info">
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-outline-light float-md-right" value="Add Category" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

