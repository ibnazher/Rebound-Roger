@model Rebound.Models.Item

@{
    ViewBag.Title = "Delete";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card">
        <div class="card-header bg-warning text-white"> <h3>Are you sure you want to delete this?</h3> </div>
        <div class="card-body">

            <div>
                <dl class="dl-horizontal d-flex">
                    <dt class="mr-3">
                        @Html.DisplayNameFor(model => model.Name):
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                </dl>
                <dl class="dl-horizontal d-flex">
                    <dt class="mr-3">
                        @Html.DisplayNameFor(model => model.ItemCategory.Name):
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ItemCategory.Name)
                    </dd>

                </dl>
                <dl class="dl-horizontal d-flex">
                    <dt class="mr-3">
                        @Html.DisplayNameFor(model => model.Price):
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Price)
                    </dd>

                </dl>
                <dl class="dl-horizontal d-flex">
                    <dt class="mr-3">
                        @Html.DisplayNameFor(model => model.ShortDescription):
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ShortDescription)
                    </dd>

                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>



