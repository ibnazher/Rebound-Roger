                        d.start = $('#startdate').val(),
                            d.end = $('#enddate').val()
                    },
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    {
                        "data": "date",
                        "type": "date ",
                        "render": function (value) {
                            if (value === null) return "";


                            return moment(value).utcOffset("@TimeZoneOffset").format("dddd, Do MMM  YY");
                        }
                    },
                    { "data": "user" },
                    { "data": "amount" },
                    { "data": "ballrent" },
                    { "data": "paid" },
                    { "data": "customer" },
                    {
                        "data": "create",
                        "type": "date ",
