@model IEnumerable<Rebound.Models.Operators>

@{
    ViewBag.Title = "Index";
}




<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Operator List</h6>
        <a href="@Url.Action("Create","Operators")" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Operator</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th>Phone</th>
                        <th width="50px">Edit</th>
                        <th width="50px">Delete </th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                   "ajax": {
                    "url": "/Operators/GetOperators",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "name" },
                    { "data": "email" },
                    { "data": "mobile" },
                    { "data": "phone" },
                    {
                        "render": function(data, type, full, meta) {
                            return'<a href="/Operators/Edit/' + full.id + '"><i class="fas fa-edit"></i></a>' ;
                        }
                    },
                    {
                        "render": function(data, type, full, meta) {
                            return'<a href="/Operators/Delete/' + full.id + '"><i class="far fa-trash-alt"></i>' ;
                        }
                    }
                ],
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                dom:  "lBftip",
                buttons: [
                    {
                        extend: 'excel',
                        className: 'Button',
                        text: '<i class="fas fa-file-excel" aria-hidden="true"></i> Export to Excel '
                    },
               ],
            });
            function ViewCostomer(data) {
                alert(data);
            };

        });
    </script>
}
