
@{
    ViewBag.Title = "Remove user role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container cus">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4>Remove user role</h4>
                </div>
                <div class="card-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="checkbox">

                            @foreach (var item in ViewBag.Roles)
                            {
                                
                                <label id="@item"><input type="checkbox" name="rolelist" value="@item" />  @item</label><br />
                            }
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <div style="float: right;" class="col-md-offset-2 col-md-8">
                            <input type="submit" value="Remove Role" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>